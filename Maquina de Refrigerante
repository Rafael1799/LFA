		 Scanner maquina = new Scanner(System.in);
double valorinserido;
double valorcoca = 0.45;
double valor10;
double valor25;
double quant10;
double quant25;
double cofre = 0;
int resp = 1;


System.out.println("Digite a quantidade de moedas de 10 centavos: ");
quant10 = maquina.nextDouble();

System.out.println("Digite a quantidade de moedas de 25 centavos: ");
quant25 = maquina.nextDouble();

