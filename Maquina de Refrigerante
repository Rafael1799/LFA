valor25 = quant25 * 0.25;
valorinserido = valor10 + valor25;
if (valorinserido == 0.45) {
	System.out.println("Obrigado pela Compra");
} else {
	System.out.println("Por favor insira o valor exato do produto!");
	System.out.println("Valor da Coca Cola é de R$ 0,45");
	cofre =+ valorinserido;
}
System.out.println("Valor contido na maquina é de =  R$" + cofre );


